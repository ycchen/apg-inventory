<div class="root">
  <div class="row">
      <div class="span12">
          <div class="grey-box">
            <h3>Listing hand_reciepts</h3>
            <table class="table table-striped">
              <tr>
                <th>Reciept</th>
                <th>User</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>

            <% @hand_reciepts.each do |hand_reciept| %>
              <tr>
                <td><%= hand_reciept.reciept %></td>
                <td><%= hand_reciept.user.display_name %></td>
                <td><%= link_to 'Show', hand_reciept %></td>
                <td><%= link_to 'Edit', edit_hand_reciept_path(hand_reciept) %></td>
                <td><%= link_to 'Destroy', hand_reciept, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
            </table>

            <br />

            <%= link_to 'New Hand reciept', new_hand_reciept_path, class: "btn btn-primary" %>
        </div>      
      </div>
  </div>
</div>