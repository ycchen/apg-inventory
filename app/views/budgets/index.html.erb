<div class="root">
    <div class="row">
        <div class="span12">
            <div class="grey-box">  
              <h3>Listing budgets</h3>
              <table class="table table-striped">
                <tr>
                  <th>Name</th>
                  <th>Number</th>
                  <th>Starts at</th>
                  <th>Ends at</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>

              <% @budgets.each do |budget| %>
                <tr>
                  <td><%= budget.name %></td>
                  <td><%= budget.number %></td>
                  <td><%= budget.starts_at %></td>
                  <td><%= budget.ends_at %></td>
                  <td><%= link_to 'Show', budget %></td>
                  <td><%= link_to 'Edit', edit_budget_path(budget) %></td>
                  <td><%= link_to 'Destroy', budget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
              </table>

              <br />

              <%= link_to 'New Budget', new_budget_path %>
            </div>      
        </div>
    </div>
</div>
