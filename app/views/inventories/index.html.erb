<div class="root">
  <div class="row">
      <div class="span12">
          <div class="grey-box">
            <h3>Listing Inventories</h3>
             <%= paginate @inventories %>
            <table class="table table-striped">
              <tr>
                <th>Stocknumber</th>
                <th>Name</th>
                <th>Description</th>
                <th>Barcode</th>
                <th>Purchase date</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
              </tr>

            <% @inventories.each do |inventory| %>
              <tr>
                <td><%= inventory.stocknumber %></td>
                <td><%= inventory.name %></td>
                <td><%= inventory.description %></td>
                <td><%= inventory.barcode %></td>
                <td><%= inventory.purchase_date %></td>
                <td></td>
                
                <td><%= link_to 'Show', inventory %></td>
                <td><%= link_to 'Edit', edit_inventory_path(inventory) %></td>
                <td><%= link_to 'Destroy', inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
            </table>

            <br />
            <%= paginate @inventories %>

            <br />

            <%= link_to 'New Inventory', new_inventory_path, class: "btn btn-primary" %>
        </div>      
      </div>
  </div>
</div>