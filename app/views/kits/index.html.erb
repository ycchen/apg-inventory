<div class="root">
    <div class="row">
        <div class="span12">
            <div class="grey-box">  
                <h3>Listing kits</h3>

                <table class="table table-striped">
                  <tr>
                    <th>Location</th>
                    <th>Budget</th>
                    <th>Tombstoned</th>
                    <th>Checkoutable</th>
                    <th>Cost</th>
                    <th>Insured</th>
                    <th></th>
                    <th></th>
                    <th></th>
                  </tr>

                <% @kits.each do |kit| %>
                  <tr>
                    <td><%= kit.location.name %></td>
                    <td><%= kit.budget.name %></td>
                    <td><%= kit.tombstoned %></td>
                    <td><%= kit.checkoutable %></td>
                    <td><%= number_to_currency(kit.cost) %></td>
                    <td><%= to_yes_no(kit.insured) %></td>
                    <td><%= link_to 'Show', kit %></td>
                    <td><%= link_to 'Edit', edit_kit_path(kit) %></td>
                    <td><%= link_to 'Destroy', kit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
                </table>

                <br />

                <%= link_to 'New Kit', new_kit_path %>
            </div>      
        </div>
    </div>
</div>
