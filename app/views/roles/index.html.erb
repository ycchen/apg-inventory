<div class="root">
  <div class="row">
    <div class="span12">
      <div class="grey-box">
        <h3>Listing roles</h3>

        <table class="table table-striped">
          <tr>
            <th>Name</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>

          <% @roles.each do |role| %>
          <tr>
            <td><%= role.name %></td>
            <td><%= link_to 'Show', role %></td>
            <td><%= link_to 'Edit', edit_role_path(role) %></td>
            <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </table>

        <br />

        <%= link_to 'New Role', new_role_path %>
      </div>      
    </div>
  </div>
</div>